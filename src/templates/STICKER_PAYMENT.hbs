      <span style="color:blue;">{{#if breakdown.dieCut}} - Additional Die-cut{{/if}}</span>
      <br>
      <span style="color:#008000;font-weight:bold;">- Final Artwork : </span>
      <span style="color:#008000;font-weight:bold;">
        {{~#if isMulti~}}
          {{~#each designs~}}
            {{../baseName}}{{this}}.jpg
            {{#unless @last}}
              <br><span style="display:inline-block; width:13ch;"></span>
            {{/unless}}
          {{~/each~}}
        {{~else~}}
          {{~baseName}}.jpg
        {{~/if~}}
      </span>
    </p>
</div>

<div style="margin:0px 0px 0px 40px;border:none;padding:0px">
